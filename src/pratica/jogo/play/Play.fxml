    <stylesheets>
        <URL value="@stylePlay.css" />
    </stylesheets>
    <children>
        <ImageView fx:id="img_map" fitHeight="367.0" fitWidth="900.0" layoutY="324.0" onMouseClicked="#move" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/map.png" />
            </image>
        </ImageView>
        <ImageView fx:id="img_style" fitHeight="180.0" fitWidth="180.0" layoutX="545.0" layoutY="60.0" pickOnBounds="true" preserveRatio="true" styleClass="img-music">
         <image>
            <Image url="@../images/questionmark.jpg" />
         </image>
        </ImageView>
        <ImageView fx:id="img_character" fitHeight="97.0" fitWidth="104.0" layoutX="192.0" layoutY="435.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/rsz_sambapixel.png" />
            </image>
        </ImageView>
      <Label id="questionTitle" fx:id="question" alignment="CENTER" contentDisplay="CENTER" layoutY="17.0" prefHeight="20.0" prefWidth="900.0" stylesheets="@stylePlay.css" text="QUAL O ESTILO MUSICAL?">
