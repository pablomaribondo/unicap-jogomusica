                  <Label fx:id="txt" alignment="TOP_LEFT" prefHeight="400.0" prefWidth="451.0" styleClass="description-scrollpane" stylesheets="@stylePlay.css" />
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
